            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpay_order_id\": \"order_id\",\n  \"razorpay_payment_id\": \"payment_id\",\n  \"razorpay_signature\": \"signature\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/checkout/verify",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "verify"]
            }
          }
        }
      ]
